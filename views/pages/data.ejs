<!DOCTYPE html>
<html lang="en">

<head>
    <title>Database</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../css/auth.css" />
    <style>
        html,
        body {
            overflow-y: scroll;
        }

        table {
            color: #f4f4f4;
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            border: 1px solid #1b003a3f;
            padding: 8px;
        }

        th {
            background-color: #3604042a;
            text-align: left;
        }

        .highlight {
            background-color: #ffbf00;
            /* soft green */
            font-weight: 600;
        }
    </style>
</head>

<body>

    <table id="dataTable">
        <thead>
            <tr>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>

    <script>
        generateTable = (json) => {
            const table = document.getElementById('dataTable');
            const thead = table.querySelector('thead');
            const tbody = table.querySelector('tbody');

            // Clear existing table data
            thead.innerHTML = '';
            tbody.innerHTML = '';

            // Extract keys for the headers
            const keys = Object.keys(Object.values(json)[0]);

            // Create table headers
            const headerRow = document.createElement('tr');
            headerRow.innerHTML = `<th>Date</th>`;
            keys.forEach(key => {
                headerRow.innerHTML += `<th>${key}</th>`;
            });
            thead.appendChild(headerRow);

            // Convert object to array and sort by date (newest first)
            const sortedEntries = Object.entries(json).sort(([dateA], [dateB]) => {
                const dA = new Date(dateA);
                const dB = new Date(dateB);
                return dB - dA; // Newest first
            });

            // Create table rows
            sortedEntries.forEach(([id, data], index) => {
                const row = document.createElement('tr');
                if (index === 0) row.classList.add('highlight'); // highlight the most recent entry
                row.innerHTML = `<td>${id}</td>`;
                keys.forEach(key => {
                    row.innerHTML += `<td>${data[key]}</td>`;
                });
                tbody.appendChild(row);
            });
        }

        fetchData = async () => {
            try {
                const response = await fetch('/firebase/requests', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                });
                const json = await response.json();
                generateTable(json);
            } catch (error) {
                console.error('Error calling /requests:', error);
            }
        }

        document.addEventListener('DOMContentLoaded', () => {
            fetchData();
        });
    </script>
</body>

</html>